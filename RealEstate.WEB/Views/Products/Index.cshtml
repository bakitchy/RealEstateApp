
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admins/Index.cshtml";
}

@model List<ResultProductDto>

<div class="container-fluid pt-4 px-4">
    <div class="arrow g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">City</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Title</td>
                                    <td>@item.City</td>
                                    <td>@item.District</td>
                                    <td>@item.ProductCategory</td>
                                    <td>@item.Price</td>
                                    <td>@item.Type</td>
                                    <td><a href="/Products/DeleteProduct/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Products/UpdateProduct/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Products/ProductDetail/@item.Id" class="btn btn-outline-success">Sitede Gör</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <td><a href="/Products/CreateProduct" class="btn btn-outline-info">Yeni İlan Oluştur</a></td>
                </div>
            </div>
        </div>
    </div>
</div>

